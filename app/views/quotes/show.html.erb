                    <th>Waiver Of Collision Deductible</th>
                    <th>Rental Reimbursement</th>
                    <th>Roadside Coverage</th>
                    <th>Total Premium</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                </tr>
            </thead>
            <tbody>
                <% @quotes.each {|quote| %>
                <tr>
                    <td><%= quote.id %></td>
                    <td><%= quote.kind %></td>
                    <td><%= quote.promo_date %></td>
                    <td><%= quote.category %></td>
                    <td><%= quote.carrier %></td>
