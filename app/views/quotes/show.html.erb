                    }, {
            		label: "total_premium",
            		name: "total_premium"
                    }, {
            		label: "created_at",
            		name: "created_at"
                    }, {
            		label: "updated_at",
            		name: "updated_at"
            	}]
            });

            $('.datatable').on( 'click', 'tbody td:not(:first-child)', function (e) {
                editor.inline( this );
            } );

