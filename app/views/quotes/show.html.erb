                    }, {
            		label: "property_damage_liability",
            		name: "property_damage_liability"
                    }, {
            		label: "medical_payments",
            		name: "medical_payments"
                    }, {
            		label: "uninsured_motorist_bodily_injury",
            		name: "uninsured_motorist_bodily_injury"
                    }, {
            		label: "comprehensive",
            		name: "comprehensive"
                    }, {
            		label: "collision",
            		name: "collision"
                    }, {
            		label: "waiver_of_collision_deductible",
            		name: "waiver_of_collision_deductible"
                    }, {
            		label: "rental_reimbursement",
