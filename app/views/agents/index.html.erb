<% if session[:agent].blank? %>
    <div class="large-3 large-centered">
        <%= form_tag(agent_login_url) do %>
            Username: <%= text_field_tag 'agent[login]' %>
            Password: <%= text_field_tag 'agent[password]' %>
            <%= submit_tag 'Login', class: "button" %>
        <% end %>
    </div>
<% else %>
    <% if @home_quotes.present? %>
        <%= form_tag send_quote_path do %>
        <div class="large-10 large-centered">
            <table id="datatable" class="display responsive no-wrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Promo</th>
                        <th>Status</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>DL Number</th>
                        <th>Marital Status</th>
                        <th>Street</th>
                        <th>Street2</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Postal Code</th>
                        <th>Year Built</th>
                        <th>Alarm System</th>
                    </tr>
                </thead>
                <tbody>
                    <% @home_quotes.each {|home| %>
                        <tr>
                            <td><%= home.id %></td>
                            <td><%= select_tag 'promo', options_for_select(@quotes), {:include_blank => '--Choose Promo--'} %>
                            <td><%= home.status %></td>
                            <td><%= home.user.username %></td>
                            <td><%= home.user.phone_number %></td>
                            <td><%= home.user.email %></td>
                            <td><%= home.user.dl_number %></td>
                            <td><%= home.user.martial_status %></td>
                            <td><%= home.street %></td>
                            <td><%= home.street2 %></td>
                            <td><%= home.city %></td>
                            <td><%= home.state %></td>
                            <td><%= home.postal_code %></td>
                            <td><%= home.year_built %></td>
                            <td><%= home.alarm_system %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <% end %>
        <script>
            $('#datatable').DataTable({});
        </script>
    <% end %>
<% end %>
